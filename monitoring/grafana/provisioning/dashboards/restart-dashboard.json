{
  "id": null,
  "title": "APM Backend Monitoring with Restart Tracking",
  "tags": ["apm", "nodejs", "restarts"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Total Restarts Today",
      "type": "stat",
      "targets": [
        {
          "expr": "app_restarts_total{app=\"apm-backend\"}",
          "legendFormat": "Restarts"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Uptime Since Last Restart",
      "type": "stat",
      "targets": [
        {
          "expr": "app_uptime_seconds{app=\"apm-backend\"}",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "s"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "Restarts in Last Hour",
      "type": "stat",
      "targets": [
        {
          "expr": "resets(http_requests_total{app=\"apm-backend\",route=\"/metrics\"}[1h])",
          "legendFormat": "Restarts/hour"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 4,
      "title": "Request Counter Timeline (Shows Restarts)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "http_requests_total{app=\"apm-backend\",route=\"/metrics\"}",
          "legendFormat": "Metrics Requests (Restart Drops Visible)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 4}
    },
    {
      "id": 5,
      "title": "Restart Detection Timeline",
      "type": "timeseries",
      "targets": [
        {
          "expr": "resets(http_requests_total{app=\"apm-backend\",route=\"/metrics\"}[5m])",
          "legendFormat": "Restart Events"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "red"},
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12}
    },
    {
      "id": 6,
      "title": "Request Rate (Smooth)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total{app=\"apm-backend\"}[5m])",
          "legendFormat": "{{method}} {{route}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12}
    },
    {
      "id": 7,
      "title": "üö® Error Rate %",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{app=\"apm-backend\",status_code=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total{app=\"apm-backend\"}[5m])) * 100",
          "legendFormat": "Error Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          },
          "unit": "percent",
          "max": 100
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 8,
      "title": "üìä Response Time (P95)",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{app=\"apm-backend\"}[5m])) * 1000",
          "legendFormat": "P95 Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          },
          "unit": "ms"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4}
    },
    {
      "id": 9,
      "title": "üß† Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "memory_usage_bytes{app=\"apm-backend\",type=\"heap_used\"}",
          "legendFormat": "Heap Used"
        },
        {
          "expr": "memory_usage_bytes{app=\"apm-backend\",type=\"heap_total\"}",
          "legendFormat": "Heap Total"
        },
        {
          "expr": "memory_usage_bytes{app=\"apm-backend\",type=\"rss\"}",
          "legendFormat": "RSS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18}
    },
    {
      "id": 10,
      "title": "üíª CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "cpu_usage_percent{app=\"apm-backend\"}",
          "legendFormat": "CPU Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "percent",
          "max": 100
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18}
    },
    {
      "id": 11,
      "title": "üìà Response Time Distribution",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{app=\"apm-backend\"}[5m])) * 1000",
          "legendFormat": "P50 (Median)"
        },
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{app=\"apm-backend\"}[5m])) * 1000",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{app=\"apm-backend\"}[5m])) * 1000",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "ms"
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 24}
    },
    {
      "id": 12,
      "title": "üî• Top Endpoints by Traffic",
      "type": "timeseries",
      "targets": [
        {
          "expr": "topk(5, sum by (route) (rate(http_requests_total{app=\"apm-backend\"}[5m])))",
          "legendFormat": "{{route}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 24}
    },
    {
      "id": 13,
      "title": "üìä HTTP Status Codes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (status_code) (rate(http_requests_total{app=\"apm-backend\"}[5m]))",
          "legendFormat": "{{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 30}
    },
    {
      "id": 14,
      "title": "üë• Active Users",
      "type": "stat",
      "targets": [
        {
          "expr": "active_users_current{app=\"apm-backend\"}",
          "legendFormat": "Active Users"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 3, "w": 4, "x": 8, "y": 30}
    },
    {
      "id": 15,
      "title": "üîê User Logins",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(user_logins_total{app=\"apm-backend\"}[5m]) * 60",
          "legendFormat": "Logins/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 3, "w": 4, "x": 12, "y": 30}
    },
    {
      "id": 16,
      "title": "üîå Event Loop Lag",
      "type": "timeseries",
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds{app=\"apm-backend\"} * 1000",
          "legendFormat": "Event Loop Lag"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "ms"
        }
      },
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 30}
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "refresh": "5s"
}
