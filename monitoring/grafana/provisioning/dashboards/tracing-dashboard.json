{
    "id": null,
    "title": "ðŸ” Distributed Tracing Dashboard",
    "tags": ["tracing", "apm", "tempo"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "ðŸ“Š Service Map",
        "type": "nodeGraph",
        "targets": [
          {
            "expr": "{__name__=~\"traces\"}",
            "refId": "A",
            "datasource": {
              "type": "tempo",
              "uid": "tempo"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideNoData": false
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "ðŸŽ¯ Recent Traces",
        "type": "traces",
        "targets": [
          {
            "query": "{service.name=\"apm-backend\"}",
            "refId": "A",
            "datasource": {
              "type": "tempo",
              "uid": "tempo"
            }
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "âš¡ Response Time Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 4,
        "title": "ðŸ”¥ Error Rate by Operation",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 5,
        "title": "ðŸ“ˆ Span Duration Breakdown",
        "type": "timeseries",
        "targets": [
          {
            "query": "{service.name=\"apm-backend\"} | json | duration > 0",
            "refId": "A",
            "datasource": {
              "type": "tempo",
              "uid": "tempo"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ns",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1
}
