          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "sum(rate(http_requests_total{job=\"apm-backend\",status!~\"4..|5..\"}[5m])) / sum(rate(http_requests_total{job=\"apm-backend\"}[5m])) * 100",
